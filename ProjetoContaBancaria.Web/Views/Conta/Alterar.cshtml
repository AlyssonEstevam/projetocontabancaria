@model ProjetoContaBancaria.Web.Application.Conta.Model.ContaModel

@{
    ViewBag.Title = "Alterar Conta";
}

<h2>Alterar Conta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Num_NumeroConta)
    @Html.HiddenFor(model => model.Vlr_Saldo)

    <div class="form-group">
        @Html.LabelFor(model => model.Dat_DataAbertura, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Dat_DataAbertura, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Dat_DataAbertura, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ind_ContaAtiva, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Ind_ContaAtiva)
                @Html.ValidationMessageFor(model => model.Ind_ContaAtiva, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
